{
  "name": "typescript-jest",
  "version": "0.0.1",
  "description": "boilerplate of typescript with jest",
  "main": "src/index.js",
  "scripts": {
    "test": "jest"
  },
  "author": "5p",
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^25.1.3",
    "jest": "^25.1.0",
    "ts-jest": "^25.2.1",
    "typescript": "^3.8.2"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "testMatch": [
      "**/__tests__/*.(test|spec).(ts|tsx|js)"
    ],
    "globals": {
      "ts-jest": {
        "diagnostics": false
      }
    }
  }
}
